<div class="all-list-calendars">
    <% var signature = data.signatures %>
    <% var external = false %>
    <div class="my-calendars">
        <a title='Minhas agendas' class="title-my-calendars" aria-expanded='false' role='button' tabindex='0'>Minhas agendas</a>
        <span class="status-list ui-icon ui-icon-triangle-1-s"></span>
        <a href="#" class="button new new-calendar">Nova Agenda</a>
        <ul class="list-calendars my-list-calendars">
            <% for (var i=0; i < signature.length; i++) {
            if(signature[i].isOwner == 1){
            %>
            <li class="list-calendars-item list-calendars-item-<%= signature[i].calendar.id %>" title="<%= signature[i].calendar.name %>">

                <div>
                    <input class="calendar-view" type="checkbox" name="" value="<%= signature[i].calendar.id %>" checked="checked"/>
                    <label><%= signature[i].calendar.name %></label>

                </div> 
                <a class="cal-list-options-btn my-cal-list-options-btn-<%= signature[i].calendar.id %>" style="background-color:#<%=signature[i].backgroundColor%>; border-color:#<%= signature[i].borderColor%>;">
                    <img src="../prototype/modules/calendar/img/arrow_down.png" width="10" height="10" class="cal-list-img"/>
                </a>


                <div class="cal-list-options my-cal-list-options-<%= signature[i].calendar.id %> hidden">
                    <ul>
                        <li><a href="#" onclick="add_tab_configure_calendar(<%= signature[i].calendar.id%>);">Configurações</a></li>
                        <li><a href="#" onclick="show_modal_import_export(0, <%= signature[i].calendar.id%>);">Importar</a></li>
                        <li><a href="#" onclick="show_modal_import_export(1, <%= signature[i].calendar.id%>);">Exportar</a></li>
                        <li><a href="#" onclick="show_modal_shared(<%= signature[i].calendar.id%>);">Compartilhar agenda</a></li>
                        <li><a href="#" onclick="remove_calendar();">Remover agenda</a></li>
                    </ul>

                </div>
            </li>
            <% 		
            }else
            external = true;
            }
            %>

        </ul>
    </div>

    <div class="signed-calendars">
        <a title='Agendas assinadas' class="title-signed-calendars" aria-expanded='false' role='button' tabindex='0'>Agendas assinadas</a>			
        <span class="status-list-shared ui-icon ui-icon-triangle-1-s"></span>
        <a href="#" class="button new new-calendar-shared tiny">Nova Agenda</a>

        <% if (external) { %>	
        <ul class="list-calendars signed-list-calendars">
            <% for (var i=0; i < signature.length; i++) {
            if(signature[i].isOwner == 0){
            %>
            <li class="list-calendars-item list-calendars-item-<%= signature[i].calendar.id %>" title="<%= signature[i].calendar.name %>">
                 <div>
		    <input class="calendar-view" type="checkbox" name="" value="<%= signature[i].calendar.id %>" checked="checked"/>
		    <label><%= signature[i].calendar.name %></label>
		 </div>
                <a class="cal-list-options-btn my-cal-list-options-btn-<%= signature[i].calendar.id %>" style="background-color:#<%=signature[i].backgroundColor%>; border-color:#<%= signature[i].borderColor%>;">
                    <img src="../prototype/modules/calendar/img/arrow_down.png" width="10" height="10" class="cal-list-img"/></a>
                <div class="cal-list-options my-cal-list-options-<%= signature[i].calendar.id  %> hidden">
                    <ul>
                        <li><a href="#" onclick="add_tab_configure_calendar(<%= signature[i].calendar.id %>);">Configurações</a></li>
                        <li><a href="#" onclick="show_modal_import_export(0, <%= signature[i].calendar.id %>);">Importar</a></li>
                        <li><a href="#" onclick="show_modal_import_export(1, <%= signature[i].calendar.id %>);">Exportar</a></li>
                        <%if(!signature[i].permission.acl['required']){%>
                            <li><a href="#" onclick="cancel_signature(<%= signature[i].id %>);">Cancelar assinatura</a></li>
                        <%}%>
                    </ul>

                </div>

            </li>
            <% 		
            }
            }
            %>
        </ul>
        <% } %>
    </div>
</div>
